.app
    display flex
    flex-direction column
    height 100%

    .title-bar
        position fixed
        z-index 100
        left 0
        right 0
        display flex
        align-items center

        .menu
            margin-left auto
            perspective 1000px
            transform-style preserve-3d

            .menu-item
                transition all 0.2s linear
                border-left 1px solid #fff
                border-right 1px solid #fff
                transform scale(1)

                &:hover
                    transform scale(1.05)
                    border-left 1px solid #ddf
                    border-right 1px solid #ddf

                 > a
                     color #444
                     padding 1em
                     text-decoration none

                     &:hover
                         color #222
                     &:active
                        color #555

    .content
        flex 1
        display flex
        align-items center
        justify-content center
        text-align center

        > div
            position absolute

        .main-content-enter
            opacity 0
            transition all .5s ease-in

        .main-content-enter.main-content-enter-active
            opacity 1

        .main-content-leave
            opacity 1
            transition all .5s ease-in

        .main-content-leave.main-content-leave-active
            opacity 0
