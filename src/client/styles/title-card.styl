@import url(\//fonts.googleapis.com/css?family=Jura)

.title-card
    display inline-block
    font-family Jura
    font-size 30pt
    padding 0.5% 1%
    cursor pointer
    position absolute
    transition all 0.8s ease-out
    top 0
    left 0
    transform translate(0, 0)

    &.focused
        animation breath 1.5s linear infinite
        font-size 100pt
        padding 1% 3%
        top 50%
        left 50%
        transform translate(-50%, -50%)

        &.collapsed
            animation none

$shadow-color = #aaa
@keyframes breath
    0%
        text-shadow $shadow-color 0 0 0
    50%
        text-shadow $shadow-color 0 0 15px
    100%
        text-shadow $shadow-color 0 0 0
