@import url(\//fonts.googleapis.com/css?family=Jura)

.title-card
    display inline-block
    font-family Jura
    color #032510
    font-size 30pt
    padding 0.5% 1%
    cursor pointer
    position absolute
    transition all 2s ease-out
    top 0
    left 0
    transform-origin 50% 50%
    transform translate(0, 0)

    &.focused
        font-size 100pt
        padding 1% 3%
        top 50%
        left 50%
        transform translate(-50%, -50%)
        white-space no-wrap

        & > .title
            animation breath 1.3s ease-in-out infinite

        &.collapsed > .title
            animation none

$shadow-color = rgba(0, 0, 0, 0.6)
@keyframes breath
    0%
        transform scale(1.007)
        text-shadow $shadow-color 0 0 0
    50%
        transform scale(1)
        text-shadow $shadow-color 0 0 2px
    100%
        transform scale(1.007)
        text-shadow $shadow-color 0 0 0
