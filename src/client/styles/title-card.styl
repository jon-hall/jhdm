@import url(\//fonts.googleapis.com/css?family=Jura)

.title-card
    display inline-block
    font-family Jura
    padding 0.5% 1%
    cursor pointer
    position absolute
    transform-origin 50% 50%

    &.focused
        transform translate(-50%, -50%)
        font-size 100pt
        color #032510
        padding 1% 3%
        top 50%
        left 50%
        white-space no-wrap

    &:not(.focused)
        // Use multiple animations to mix timing functions for different properties
        animation title-card-fall-in-place 2s ease-out forwards, \
            title-card-fall-left 2s ease-in forwards

@keyframes title-card-fall-in-place
    from
        transform translate(-50%, -50%)
        top 50%
        font-size 100pt
        color #032510
    to
        transform translate(0, 0)
        top 0
        font-size 30pt
        color #afbdb6

@keyframes title-card-fall-left
    from
        left 50%
    to
        left 0
