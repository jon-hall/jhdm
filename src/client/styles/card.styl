.card
    display inline-block
    position relative
    padding 10px
    margin 20px
    width 240px
    background white
    opacity 0
    transition all 0.5s ease-out
    transform translateZ(10px)
    box-shadow 3px 3px 10px rgba(0, 0, 0, 0.2), -5px -4px 10px rgba(0, 0, 0, 0.08)
    cursor pointer

    .card-title
        color #bbb
        position absolute
        height 0
        overflow hidden
        width 100%
        text-align center
        font-family sans-serif
        font-size 20pt
        transition all 0.3s ease-out

    &:hover
        &:nth-child(even)
            transform translateZ(15px) rotate(-1deg)
        &:nth-child(odd)
            transform translateZ(15px) rotate(1deg)
        box-shadow 4px 4px 11px rgba(0, 0, 0, 0.2), -6px -5px 11px rgba(0, 0, 0, 0.08)

        .card-title
            height 1em

    .card-image
        width 100%
        height 160px

.active
    .card
        opacity 0.95
