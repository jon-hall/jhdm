$card-padding = 10px

.card
    display inline-block
    position relative
    overflow visible
    box-sizing border-box
    padding $card-padding
    margin 20px
    width 240px
    height 160px
    background white
    opacity 0
    transition all 0.3s ease-out
    transform scale(1)
    cursor pointer

    &:hover
        transform scale(1.015)

        &::after
            box-shadow 4px 4px 11px rgba(0, 0, 0, 0.2), -6px -5px 11px rgba(0, 0, 0, 0.08)

        .card-title
            height 1em

    // Put the shadow animation on a pseudo element to reduce shakiness in IE11
    &::after
        width 100%
        height 100%
        content ' '
        display inline-block
        top 0
        left 0
        position absolute
        box-shadow 3px 3px 10px rgba(0, 0, 0, 0.2), -5px -4px 10px rgba(0, 0, 0, 0.08)

    .card-title
        color #bbb
        position absolute
        height 0
        overflow hidden
        width 100%
        text-align center
        font-family sans-serif
        font-size 20pt
        transition all 0.3s ease-out

    .card-image
        width 100%
        height 100%

.active
    .card
        opacity 0.95
